<div class="pastry-grid">
    <% @@muffins.each do |muffin| %>
        <div class="pastry pastry<%= @@muffins.index(muffin)+1 %>">

            <% if muffin.vegan == true %>
                <div class="img-container">
                    <img src="<%= muffin.image %>" class="pastry-img"/>
                    <img src="https://www.nicepng.com/png/full/129-1292042_inquisitive-discussion-about-veganism-on-abc-radio-veganism.png" class="vegan"/>
                </div>
            <% else %>
                <img src="<%= muffin.image %>" class="pastry-img"/>
            <% end %>

            <h2 class="pastry-name"><span><%= muffin.name %> Muffin</h2>
            <p class="pastry-desc"><%= muffin.description %></p>
            <p class="price">$<%= muffin.price %></p>
        </div>
    <% end %>
</div>

<style>
    .pastry1 .pastry-img {
        clip-path: circle(40% at 50% 52%);
        width: 60%;
        margin: -65px 15% 0;
    }

    .pastry2 .pastry-img {
        clip-path: circle(37% at 50% 48%);
        width: 100%;
        margin: 15px -5%;
    }

    .pastry3 .pastry-img {
        clip-path: circle(42% at 50% 38%);
        width: 60%;
        margin: 0px auto 0;
    }

    .pastry1 .price {
        margin: -30px 0 0;
    }

    .pastry3 .price {
        margin: -60px 0 0;
    }

    .pastry3 .pastry-desc {
        margin: -30px 0 0;
    }

    .pastry-desc {
        margin: 0;
    }

    .price {
        height: 2em;
    }

    .vegan {
        right: 25%;
        bottom: 22%;
    }
</style>